% -*- mode: erlang -*-

{erl_opts, [{native, o3},
	    warn_missing_spec,
            {parse_transform, lager_transform}
	   ]}.

{cover_enabled, true}.

{deps, [
        {jsone, {git, "git://github.com/sile/jsone.git", 
                 {branch, "master"}}},
        {lager, "3.0.1"}
       ]}.						     


% Documentation
{edoc_opts, [{skip_deps, true},
             {preprocess, true}, 
	     {packages, true}
	     ] }.

{dialyzer_opts, [{warnings, [no_return,
                             no_unused,
                             no_improper_lists,
                             no_fun_app,
                             no_match,
                             no_opaque,
                             no_fail_call,
                             error_handling,
                             race_conditions,
                             behaviours,
                             unmatched_returns]}]}.


{relx, [{release, {'erldyn', "v0.5.0"},
         ['erldyn',
          kernel,
	  stdlib,
	  sasl, 
	  inets,
	  {observer,load},
	  {wx, load},
	  {runtime_tools, load},
          inets,
          ssl
	 ]}, 
	
        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]}.

{profiles, [
	    {prod, [
		    {relx, [{dev_mode, false},
                            {include_erts, true},
			    {include_src, false}]}
		   ]}
	    ]
}.
